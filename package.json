    "build": "turbo run build",
    "dev": "turbo run dev"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.28.1",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.2",
    "prettier": "^3.5.3",
    "sherif": "^1.4.0",
    "turbo": "^2.4.4",
    "typescript": "^5.8.3"
  },
  "packageManager": "pnpm@10.12.1",
  "engines": {
    "node": "22.16.0",
    "pnpm": "10.12.1"
  }
}
