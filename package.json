{
  "name": "code",
  "private": true,
  "type": "module",
  "scripts": {
    "root:lint:format": "prettier --check .",
    "root:lint:deps": "sherif",
    "root:lint": "pnpm run '/^root:lint:.*/'",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
