{
  "name": "@priver/eslint-config",
  "version": "9.1.0",
  "description": "Shareable config for eslint",
  "keywords": [
    "eslint",
    "eslintconfig",
    "config",
    "javascript",
    "typescript"
  ],
  "homepage": "https://github.com/priver/code/packages/eslint-config#readme",
  "bugs": "https://github.com/priver/code/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/priver/code.git",
    "directory": "packages/eslint-config"
  },
  "license": "MIT",
  "author": {
    "name": "Mikhail Priver",
    "email": "m.priver@gmail.com",
    "url": "https://github.com/priver"
  },
  "sideEffects": false,
  "type": "module",
  "exports": "./src/index.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "eslint --flag unstable_native_nodejs_ts_config .",
    "check-types": "tsc --noEmit",
    "test": "node scripts/find-rules.ts && node scripts/compare.ts",
    "clean": "del-cli dist *.tsbuildinfo",
    "build:compare": "node scripts/compare.ts --update",
    "build:tsc": "tsc -b tsconfig.build.json",
    "build": "pnpm run clean && pnpm run '/^build:.*/'",
    "dev": "tsc --watch"
  },
  "dependencies": {
    "@eslint-community/eslint-plugin-eslint-comments": "catalog:",
    "confusing-browser-globals": "^1.0.11",
    "eslint-import-resolver-typescript": "catalog:",
    "eslint-plugin-compat": "catalog:",
    "eslint-plugin-depend": "catalog:",
    "eslint-plugin-import-x": "catalog:",
    "eslint-plugin-jest-formatting": "^3.1.0",
    "eslint-plugin-n": "catalog:",
    "eslint-plugin-react-dom": "catalog:",
    "eslint-plugin-react-hooks": "catalog:",
    "eslint-plugin-react-hooks-extra": "catalog:",
    "eslint-plugin-react-naming-convention": "catalog:",
    "eslint-plugin-react-refresh": "catalog:",
    "eslint-plugin-react-rsc": "catalog:",
    "eslint-plugin-react-web-api": "catalog:",
    "eslint-plugin-react-x": "catalog:",
    "eslint-plugin-unicorn": "catalog:",
    "globals": "catalog:",
    "typescript-eslint": "catalog:"
  },
  "devDependencies": {
    "@eslint/js": "catalog:",
    "@priver/tsconfig": "workspace:*",
    "@types/confusing-browser-globals": "^1.0.3",
    "@types/node": "catalog:",
    "@typescript-eslint/utils": "catalog:",
    "del-cli": "catalog:",
    "eslint": "catalog:",
    "eslint-config-prettier": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  },
  "peerDependencies": {
    "eslint": "catalog:"
  },
  "engines": {
    "node": "^20.12.0 || ^22.13.0 || ^24.11.0 || >=25.0.0"
  },
  "publishConfig": {
    "exports": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  }
}
