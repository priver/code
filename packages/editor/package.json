{
  "name": "@priver/editor",
  "private": true,
  "version": "0.0.0",
  "description": "Rich text editor React components",
  "keywords": [
    "react",
    "lexical",
    "editor",
    "rich-text"
  ],
  "homepage": "https://github.com/priver/code/packages/editor#readme",
  "bugs": "https://github.com/priver/code/issues",
  "author": "Mikhail Priver <m.priver@gmail.com> (https://github.com/priver)",
  "repository": {
    "type": "git",
    "url": "https://github.com/priver/code.git",
    "directory": "packages/editor"
  },
  "license": "MIT",
  "sideEffects": [
    "*.css"
  ],
  "files": [
    "dist"
  ],
  "type": "module",
  "exports": {
    ".": "./src/editor.tsx"
  },
  "publishConfig": {
    "exports": {
      ".": {
        "types": "./dist/editor.d.ts",
        "import": "./dist/editor.js"
      }
    }
  },
  "scripts": {
    "lint": "eslint --flag unstable_native_nodejs_ts_config .",
    "check-types": "tsc --noEmit",
    "clean": "del-cli dist *.tsbuildinfo",
    "build:styles": "tailwindcss -i ./src/style.css -o ./dist/style.css",
    "build:tsc": "tsc -b tsconfig.build.json",
    "build": "pnpm run clean && pnpm run '/^build:.*/'",
    "dev": "tsc --watch"
  },
  "dependencies": {
    "@lexical/react": "catalog:",
    "@lexical/utils": "catalog:",
    "@priver/ui": "workspace:*",
    "lexical": "catalog:",
    "lucide-react": "catalog:"
  },
  "devDependencies": {
    "@priver/eslint-config": "workspace:*",
    "@priver/tsconfig": "workspace:*",
    "@storybook/react-vite": "catalog:",
    "@tailwindcss/cli": "catalog:",
    "@types/node": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "del-cli": "catalog:",
    "eslint": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:",
    "tailwindcss": "catalog:",
    "typescript": "catalog:"
  },
  "peerDependencies": {
    "react": "catalog:",
    "react-dom": "catalog:"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
